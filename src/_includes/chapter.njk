---
layout: 'base.njk'
---

{% include 'nav.njk' %}

<div class="headerimage">
    <img src="{{ image }}">
</div>

<div class="grid contents">
  {% for section in contents %}
    {% if section.type == "section" %}
      {% for item in section.section %}
        {% if item.type == "sectiontitle" %}
          <div class="start1 end3 sectiontitle">{{ item.sectiontitle.string | markdown | safe }}</div>
        {% elif item.type == "largetext" %}
          <div class="largeText start4 end13">{{ item.largetext.string | markdown | safe }}</div>
        {% elif item.type == "smalltext" %}
          <div class="start5 end9 smallText">{{ item.smalltext.string | markdown | safe }}</div>
        {% elif item.type == "largeimage" %}
          <div class="start6 end8 largeImage">
            {% image item.largeimage.image, "Alt text", "(min-width: 600px) 50vw, 100vw" %}
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endfor %}
</div>

